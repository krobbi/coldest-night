# NightScript Version 3.
# FizzBuzz Test
# Run a primitive version of FizzBuzz.

freeze();
show();

var FIZZ = 3;
var BUZZ = 5;

var nextFizz = FIZZ;
var nextBuzz = BUZZ;

var i = 0;

while(i < 20){
	i = i + 1;
	
	if(i == nextFizz && i == nextBuzz){
		say("FizzBuzz!");
		nextFizz = nextFizz + FIZZ;
		nextBuzz = nextBuzz + BUZZ;
	} else if(i == nextFizz){
		say("Fizz!");
		nextFizz = nextFizz + FIZZ;
	} else if(i == nextBuzz){
		say("Buzz!");
		nextBuzz = nextBuzz + BUZZ;
	} else {
		say("No string formatting yet, sorry :(");
	}
}

hide();
thaw();
