# NightScript Version 2
# Save Terminal
# Common cutscene for save terminals.

main:
<*<!
"DIALOG.TEST.SAVE_TERMINAL.MAIN"
goto menu


repeat:
<*<!
"DIALOG.TEST.SAVE_TERMINAL.REPEAT"
goto menu


menu:
&{
	| "DIALOG.TEST.SAVE_TERMINAL.OPTION.SAVE" {
		save
		"DIALOG.TEST.SAVE_TERMINAL.SAVED"
	}
	
	| "DIALOG.TEST.SAVE_TERMINAL.OPTION.NO_SAVE" {}
}

!>*>
