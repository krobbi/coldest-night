# NightScript Version 3.
# Redirect Terminal
# Cutscene for the redirect terminal in test/area_bx/west.

include "redirect_terminal_dialog";

const FLAG = "test/area_bx/west/barrier_state";

freeze();
show();

redirectTerminalMainDialog();

menu {
	option(redirectTerminalGetRedirectOption()){
		setFlag(FLAG, !getFlag(FLAG));
		redirectTerminalRedirectedDialog();
	}
	
	option(redirectTerminalGetCancelOption()){}
}

hide();
unfreeze();
