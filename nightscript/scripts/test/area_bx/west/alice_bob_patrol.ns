# NightScript Version 3.
# Patrol Route
# Patrol route for `alice` and `bob` in test/area_bx/west.

while 1 {
	sleep(5000);
	
	path("alice", "PAlB");
	path("bob", "PBoB");
	run_paths();
	await_paths();
	
	face("alice", 180);
	face("bob", 180);
	
	sleep(5000);
	
	path("alice", "PAlA");
	path("bob", "PBoA");
	run_paths();
	await_paths();
	
	face("alice", 180);
	face("bob", 180);
}
