# NightScript Version 3.
# Unlock Terminal
# Cutscene for the unlock terminal in test/area_bx/west.

include "unlock_terminal_dialog";

const FLAG = "test/area_bx/west/is_annex_unlocked";

freeze();
show();

menu {
	if get_flag(FLAG) {
		lock_prompt_dialog();
		
		option get_lock_option() {
			set_flag(FLAG, 0);
			locked_dialog();
		}
	} else {
		unlock_prompt_dialog();
		
		option get_unlock_option() {
			set_flag(FLAG, 1);
			unlocked_dialog();
		}
	}
	
	option get_cancel_option() {}
}

hide();
unfreeze();
