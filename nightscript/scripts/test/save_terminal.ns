# NightScript Version 3.
# Save Terminal
# Common cutscene for save terminals.

include "save_terminal_dialog";

freeze();
show();

if is_repeat() {
	repeat_dialog();
} else {
	main_dialog();
}

menu {
	option get_save_option() {
		save();
		saved_dialog();
	}
	
	option get_no_save_option() {}
}

hide();
unfreeze();
