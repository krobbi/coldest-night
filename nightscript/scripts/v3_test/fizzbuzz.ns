# NightScript Version 3.
# FizzBuzz Test
# Run FizzBuzz up to a given number.

freeze();
show();

const OPTION_A = 20;
const OPTION_B = 50;
const OPTION_C = 100;

var max = OPTION_A;

say("Run FizzBuzz up to...");

menu {
	option format(OPTION_A) max = OPTION_A;
	option format(OPTION_B) max = OPTION_B;
	option format(OPTION_C) max = OPTION_C;
}

say(format("Will run FizzBuzz up to {0}!", max));

const FIZZ = 3;
const BUZZ = 5;

var nextFizz = FIZZ;
var nextBuzz = BUZZ;

var value = 0;

while value < max {
	value = value + 1;
	
	var hasFactors = 0;
	var message = "";
	
	if value == nextFizz {
		hasFactors = 1;
		nextFizz = nextFizz + FIZZ;
		message = format("{0}Fizz", message);
	}
	
	if value == nextBuzz {
		hasFactors = 1;
		nextBuzz = nextBuzz + BUZZ;
		message = format("{0}Buzz", message);
	}
	
	name(format("{0}/{1}", value, max));
	
	if hasFactors {
		say(format("{0}!", message));
	} else {
		say(format(value));
	}
}

name();
say("Done!");

hide();
unfreeze();
